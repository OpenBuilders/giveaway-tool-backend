# Telegram Bot Configuration
BOT_TOKEN=your-bot-token-here

# Admin Configuration (comma-separated Telegram IDs)
ADMIN_IDS=123456789,987654321

# Redis Configuration (optional, defaults in config.yaml)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Sharding Configuration
# Enable Redis sharding (true/false)
REDIS_ENABLE_SHARDING=false

# Write shards (format: host:port:password:db, comma-separated)
# Example: redis-write-1:6379:password:0,redis-write-2:6379:password:0
REDIS_WRITE_SHARDS=

# Read shards (format: host:port:password:db, comma-separated)
# If not specified, write shards will be used for reading
# Example: redis-read-1:6379:password:0,redis-read-2:6379:password:0
REDIS_READ_SHARDS=

# Sharding strategy (hash, round_robin, consistent_hash)
REDIS_SHARDING_STRATEGY=hash

# Server Configuration
DEBUG=true
API_VERSION=v1 